{
    "name": "zendframework/zend-expressive-csrf",
    "description": "CSRF token generation and validation for PSR-7 applications using zend-expressive-session",
    "type": "library",
    "license": "BSD-3-Clause",
    "keywords": [
        "csrf",
        "expressive",
        "psr-7",
        "security",
        "session",
        "zf",
        "zendframework"
    ],
    "support": {
        "docs": "https://docs.zendframework.com/zend-expressive-csrf/",
        "issues": "https://github.com/zendframework/zend-expressive-csrf/issues",
        "source": "https://github.com/zendframework/zend-expressive-csrf",
        "slack": "https://zendframework-slack.herokuapp.com",
        "forum": "https://discourse.zendframework.com/c/questions/expressive"
    },
    "config": {
        "sort-packages": true
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/webimpress/zend-expressive-flash.git"
        }
    ],
    "require": {
        "php": "^7.1",
        "http-interop/http-server-middleware": "^1.0.1",
        "psr/container": "^1.0",
        "zendframework/zend-expressive-session": "^1.0.0-dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5.3",
        "zendframework/zend-coding-standard": "~1.0.0",
        "zendframework/zend-expressive-flash": "dev-feature/psr-15 as 0.2"
    },
    "conflict": {
        "phpspec/prophecy": "<1.7.2"
    },
    "suggest": {
        "zendframework/zend-expressive-flash": "^0.1.0 || ^1.0-dev To back CSRF tokens using flash messages"
    },
    "autoload": {
        "psr-4": {
            "Zend\\Expressive\\Csrf\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ZendTest\\Expressive\\Csrf\\": "test/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "zf": {
            "config-provider": "Zend\\Expressive\\Csrf\\ConfigProvider"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
        "upload-coverage": "coveralls -v"
    }
}
